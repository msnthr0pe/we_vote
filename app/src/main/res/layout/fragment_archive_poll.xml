<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="44dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/completed_survey"
        android:textSize="@dimen/titleTextSize"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/mediumLayoutPadding"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="?attr/ViewBackgroundFill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:maxLines="4"
                android:background="@android:color/transparent"
                android:text="@string/default_recycler_text"
                android:textSize="18sp"
                android:textAlignment="textStart" />

        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <com.example.we_vote.RelationBar
            android:layout_width="match_parent"
            android:layout_height="74dp"
            app:text="@string/first_choice"
            app:progress="45"
            android:layout_marginTop="4dp"/>

        <com.example.we_vote.RelationBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:text="@string/second_choice"
            app:progress="25"
            android:layout_marginTop="4dp"/>

        <com.example.we_vote.RelationBar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:text="@string/third_choice"
            app:progress="30"
            android:layout_marginTop="4dp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_from_archive"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:backgroundTint="@color/red"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        app:itemRippleColor="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu_bottom_nav_admin"
        android:layout_gravity="bottom"/>

</LinearLayout>