<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Регистрация"
        android:textStyle="bold"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="104dp"
        android:hint="Введите имя пользователя..."
        android:textColorHint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:hint="Формат ввода: xx.xx.xxxx"
        android:textColorHint="@color/dark_green"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <EditText
        android:id="@+id/etPassword3"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:hint="Введите название города..."
        android:textColorHint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="@+id/etPassword2"
        app:layout_constraintStart_toStartOf="@+id/etPassword2"
        app:layout_constraintTop_toBottomOf="@+id/etPassword2" />

    <EditText
        android:id="@+id/etPassword4"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:hint="Введите пароль..."
        android:textColorHint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="@+id/etPassword3"
        app:layout_constraintStart_toStartOf="@+id/etPassword3"
        app:layout_constraintTop_toBottomOf="@+id/etPassword3" />

    <EditText
        android:id="@+id/etPassword5"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:hint="Введите пароль ещё раз..."
        android:textColorHint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="@+id/etPassword4"
        app:layout_constraintStart_toStartOf="@+id/etPassword4"
        app:layout_constraintTop_toBottomOf="@+id/etPassword4" />

    <TextView
        android:id="@+id/phoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Имя пользователя"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="@+id/etPassword" />

    <TextView
        android:id="@+id/phoneTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Дата рождения"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword2"
        app:layout_constraintStart_toStartOf="@+id/etPassword2" />

    <TextView
        android:id="@+id/phoneTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Город"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword3"
        app:layout_constraintStart_toStartOf="@+id/etPassword3" />

    <TextView
        android:id="@+id/phoneTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Пароль"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword4"
        app:layout_constraintStart_toStartOf="@+id/etPassword4" />

    <TextView
        android:id="@+id/phoneTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Подтверждение пароля"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword5"
        app:layout_constraintStart_toStartOf="@+id/etPassword5" />

    <Button
        android:id="@+id/button"
        android:layout_width="337dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:text="Зарегистрироваться"
        app:layout_constraintEnd_toEndOf="@+id/etPassword5"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/etPassword5"
        app:layout_constraintTop_toBottomOf="@+id/etPassword5" />
</androidx.constraintlayout.widget.ConstraintLayout>